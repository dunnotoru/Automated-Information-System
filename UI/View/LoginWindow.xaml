<Window x:Class="UI.View.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:UI.View"
        xmlns:vm="clr-namespace:UI.ViewModel"
        mc:Ignorable="d"
        Title="LoginWindow" Height="239" Width="319" 
        MaxHeight="300" MaxWidth="400"
        MinHeight="230" MinWidth="300">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="72*"/>
            <RowDefinition Height="39*"/>
            <RowDefinition Height="41*"/>
            <RowDefinition Height="71*"/>
        </Grid.RowDefinitions>

        <TextBox HorizontalAlignment="Center" TextWrapping="Wrap" Text="{Binding Username}" VerticalAlignment="Center" Width="152" Grid.Column="1" Height="18" Grid.Row="1"/>
        <TextBox HorizontalAlignment="Center" Grid.Row="2" TextWrapping="Wrap" Text="{Binding Password}" VerticalAlignment="Center" Width="152" Grid.Column="1" Height="18"/>
        <Button Content="Войти" Command="{Binding LoginCommand}" HorizontalAlignment="Left" Margin="84,10,0,0" Grid.Row="3" VerticalAlignment="Top" Height="20" Width="40"/>
        <Button Content="Выйти" HorizontalAlignment="Left" Margin="196,10,0,0" Grid.Row="3" VerticalAlignment="Top" Height="20" Width="40"/>
    </Grid>
</Window>
