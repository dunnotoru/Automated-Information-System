<Window x:Class="UI.View.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:UI.View"
        xmlns:vm="clr-namespace:UI.ViewModel"
        mc:Ignorable="d"
        Height="344" Width="467" ResizeMode="NoResize">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="72*"/>
            <RowDefinition Height="125*"/>
            <RowDefinition Height="79*"/>
        </Grid.RowDefinitions>

        <TextBox Text="{Binding Username}" Margin="100,20,100,0" VerticalAlignment="Top"
                 Grid.Row="1"/>

        <TextBox Text="{Binding Password}" Margin="100,70,100,20" VerticalAlignment="Bottom"
                  Grid.Row="1" />

        <Button Content="Войти" Command="{Binding LoginCommand}" HorizontalAlignment="Center" Margin="0 0 0 0" Grid.Row="2" VerticalAlignment="Center" Height="20" Width="40"/>
    </Grid>
</Window>
